        <surface>
  <friction>
    <ode>
      <!-- attrito piÃ¹ realistico e NON "velcro" -->
      <mu>0.35</mu>
      <mu2>0.35</mu2>

      <!-- fondamentale: un minimo di slip = non resta incastrato -->
      <slip1>0.05</slip1>
      <slip2>0.05</slip2>
    </ode>

    <torsional>
      <!-- torsione meno "collosa" -->
